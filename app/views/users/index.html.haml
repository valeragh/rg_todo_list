%h1 Listing users

%table
  %tr
    %th Name
    %th Email
    %th Provider
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.email
      %td= user.provider
      %td= link_to 'Show', user
      - if can? :update, @user
        %td= link_to 'Edit', edit_user_path(user)
      - if can? :destroy, @user
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }
- if can? :create, @user
  %br= link_to 'New User', new_user_path